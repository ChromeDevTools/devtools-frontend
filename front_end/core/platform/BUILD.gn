devtools_foundation_module("platform") {
  sources = [
    "ArrayUtilities.ts",
    "Brand.ts",
    "Constructor.ts",
    "DateUtilities.ts",
    "DevToolsPath.ts",
    "HostRuntime.ts",
    "KeyboardUtilities.ts",
    "MapUtilities.ts",
    "MimeType.ts",
    "NumberUtilities.ts",
    "StringUtilities.ts",
    "Timing.ts",
    "TypedArrayUtilities.ts",
    "TypescriptUtilities.ts",
    "UIString.ts",
    "UserVisibleError.ts",
