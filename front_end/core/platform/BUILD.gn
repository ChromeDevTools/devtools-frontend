  testonly = true

  sources = [
    "ArrayUtilities.test.ts",
    "DateUtilities.test.ts",
    "DevToolsPath.test.ts",
    "KeyboardUtilities.test.ts",
    "MapUtilities.test.ts",
    "MimeType.test.ts",
    "NumberUtilities.test.ts",
    "StringUtilities.test.ts",
    "TypedArrayUtilities.test.ts",
  ]

  deps = [
    ":bundle",
    "../../testing",
  ]
