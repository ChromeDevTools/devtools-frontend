import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_module.gni")
import("../../../scripts/build/typescript/typescript.gni")
import("../visibility.gni")

devtools_module("badges") {
  sources = [
    "AiExplorerBadge.ts",
    "Badge.ts",
    "CodeWhispererBadge.ts",
    "DOMDetectiveBadge.ts",
    "SpeedsterBadge.ts",
    "StarterBadge.ts",
    "UserBadges.ts",
  ]

  deps = [
    "../../core/common:bundle",
    "../../core/host:bundle",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "badges.ts"

  deps = [ ":badges" ]

  visibility = [
    ":*",
    "//front_end/panels/*",
  ]

  visibility += devtools_models_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [
    "AiExplorerBadge.test.ts",
    "Badge.test.ts",
    "UserBadges.test.ts",
  ]

  deps = [
    ":bundle",
    "../../core/common:bundle",
    "../../core/host:bundle",
    "../../core/root:bundle",
    "../../testing",
  ]
}
