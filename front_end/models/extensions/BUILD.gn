import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_module.gni")
import("../../../scripts/build/typescript/typescript.gni")
import("../visibility.gni")

devtools_module("extensions") {
  sources = [
    "ExtensionAPI.ts",
    "ExtensionEndpoint.ts",
    "ExtensionPanel.ts",
    "ExtensionServer.ts",
    "ExtensionView.ts",
    "HostUrlPattern.ts",
    "LanguageExtensionEndpoint.ts",
    "RecorderExtensionEndpoint.ts",
    "RecorderPluginManager.ts",
  ]

  deps = [
    "../../../extension-api",
    "../../core/common:bundle",
    "../../core/host:bundle",
    "../../core/i18n:bundle",
    "../../core/platform:bundle",
    "../../core/protocol_client:bundle",
    "../../core/root:bundle",
    "../../core/sdk:bundle",
    "../../models/bindings:bundle",
    "../../models/har:bundle",
    "../../models/logs:bundle",
    "../../models/text_utils:bundle",
    "../../models/workspace:bundle",
    "../../ui/legacy:bundle",
    "../../ui/legacy/components/utils:bundle",
    "../../ui/legacy/theme_support:bundle",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "extensions.ts"

  deps = [ ":extensions" ]

  visibility = [
    ":*",
    "../../entrypoints/main/*",
    "../../panels/elements/*",
    "../../panels/recorder/*",
    "../../panels/sources/*",
    "../../panels/timeline/*",
    "../../testing",
  ]

  visibility += devtools_models_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [
    "ExtensionServer.test.ts",
    "HostUrlPattern.test.ts",
    "RecorderPluginManager.test.ts",
  ]

  deps = [
    ":bundle",
    "../../testing",
  ]
}
