import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_module.gni")
import("../../../third_party/typescript/typescript.gni")
import("../visibility.gni")

devtools_module("timeline_model") {
  sources = [
    "TimelineJSProfile.ts",
    "TimelineModel.ts",
    "TimelineModelFilter.ts",
    "TimelineProfileTree.ts",
    "TracingLayerTree.ts",
  ]

  deps = [
    "../../core/common:bundle",
    "../../core/i18n:bundle",
    "../../core/platform:bundle",
    "../../core/root:bundle",
    "../../core/sdk:bundle",
    "../../generated:protocol",
    "../../models/trace:bundle",
    "../cpu_profile:bundle",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "timeline_model.ts"

  deps = [ ":timeline_model" ]

  visibility = [
    ":*",
    "../../panels/timeline/*",
    "../../testing/*",
    "../../ui/components/docs/performance_panel:*",
    "../../ui/legacy/components/perf_ui/*",
  ]

  visibility += devtools_models_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [
    "TimelineModel.test.ts",
    "TimelineModelFilter.test.ts",
    "TimelineProfileTree.test.ts",
  ]

  deps = [
    ":bundle",
    "../../testing",
    "../trace:bundle",
  ]
}
