  entrypoint = "trace.ts"

  deps = [ ":trace" ]

  visibility = [
    ":*",
    "../../../test/unittests/front_end/*",
    "../../legacy_test_runner/*",
    "../../panels/lighthouse/*",
    "../../panels/network/*",
    "../../panels/recorder/*",
    "../../panels/timeline/*",
    "../../services/trace_bounds/*",
    "../../services/tracing/*",
    "../../ui/components/docs/*",
    "../timeline_model/*",
  ]

  visibility += devtools_models_visibility
}
