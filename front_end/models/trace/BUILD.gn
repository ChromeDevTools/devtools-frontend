import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_module.gni")
import("../visibility.gni")

devtools_module("trace") {
  sources = [
    "LegacyTracingModel.ts",
    "ModelImpl.ts",
    "Processor.ts",
    "TracingManager.ts",
    "TreeManipulator.ts",
  ]

  deps = [
    "../../core/common:bundle",
    "../../core/platform:bundle",
    "../../core/sdk:bundle",
    "extras:bundle",
    "handlers:bundle",
    "helpers:bundle",
    "types:bundle",
