import("../../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../../scripts/build/ninja/devtools_module.gni")
import("../../../../scripts/build/typescript/typescript.gni")
import("../../visibility.gni")

devtools_module("helpers") {
  sources = [
    "Extensions.ts",
    "Network.ts",
    "SamplesIntegrator.ts",
    "SyntheticEvents.ts",
    "Timing.ts",
    "Trace.ts",
    "TreeHelpers.ts",
  ]

  deps = [
    "../../../core/common:bundle",
    "../../../core/platform:bundle",
    "../../../core/root:bundle",
    "../../../generated:protocol",
    "../../../models/cpu_profile:bundle",
    "../../../third_party/third-party-web:bundle",
    "../types:bundle",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "helpers.ts"
  deps = [ ":helpers" ]
  visibility = [
    ":*",
    "../*",
    "../../../panels/ai_assistance:*",
    "../../../panels/timeline/components:*",
  ]

  visibility += devtools_models_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [
    "SamplesIntegrator.test.ts",
    "SyntheticEvents.test.ts",
    "Timing.test.ts",
    "Trace.test.ts",
    "TreeHelpers.test.ts",
  ]

  deps = [
    "../../../core/platform:bundle",
    "../../../models/trace:bundle",
    "../../../testing",
  ]
}
