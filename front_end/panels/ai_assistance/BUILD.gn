    "../../../test/interactions/*",
    "../../entrypoints/*",
    "../../ui/components/docs/ai_assistance/*",
    "../explain",
  ]

  visibility += devtools_panels_visibility
}

devtools_entrypoint("meta") {
  entrypoint = "ai_assistance-meta.ts"

  deps = [ ":bundle" ]

  visibility = [ "../../entrypoints/*" ]
}

