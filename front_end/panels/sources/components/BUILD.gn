import("../../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../../scripts/build/ninja/devtools_module.gni")
import("../../../../scripts/build/ninja/generate_css.gni")
import("../../../../third_party/typescript/typescript.gni")
import("../../visibility.gni")

generate_css("css_files") {
  sources = [
    "HeadersView.css",
    "breakpointsView.css",
  ]
}

devtools_module("components") {
  sources = [
    "BreakpointsView.ts",
    "BreakpointsViewUtils.ts",
    "HeadersView.ts",
  ]

  deps = [
    "../../../core/i18n:bundle",
    "../../../core/sdk:bundle",
    "../../../models/persistence:bundle",
    "../../../models/workspace:bundle",
    "../../../ui/components/buttons:bundle",
    "../../../ui/components/helpers:bundle",
    "../../../ui/components/legacy_wrapper:bundle",
    "../../../ui/components/two_states_counter:bundle",
    "../../../ui/legacy/components/utils:bundle",
    "../../../ui/lit-html:bundle",
    "../../../ui/visual_logging:bundle",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "components.ts"

  deps = [
    ":components",
    ":css_files",
  ]

  visibility = [
    ":*",
    "../:*",
  ]

  visibility += devtools_panels_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [
    "BreakpointsView.test.ts",
    "BreakpointsViewUtils.test.ts",
    "HeadersView.test.ts",
  ]

  deps = [
    ":bundle",
    "../../../core/common:bundle",
    "../../../core/sdk:bundle",
    "../../../models/bindings:bundle",
    "../../../models/breakpoints:bundle",
    "../../../models/workspace:bundle",
    "../../../testing",
    "../../../ui/components/render_coordinator:bundle",
    "../../../ui/legacy:bundle",
  ]
}
