devtools_entrypoint("bundle") {
  entrypoint = "data_grid.ts"

  deps = [
    ":css_files",
    ":data_grid",
    "../../../ui/legacy:css_files",
  ]

  visibility = default_components_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [
    "DataGrid.test.ts",
    "DataGridController.test.ts",
  ]

  deps = [
    ":bundle",
    "../../../core/platform:bundle",
    "../../../testing",
    "../../lit-html:bundle",
    "../icon_button:bundle",
    "../render_coordinator:bundle",
  ]
}
