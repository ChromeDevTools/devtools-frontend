generate_css("css_files") {
  sources = [
    "issueCounter.css",
    "issueLinkIcon.css",
  ]
}

devtools_module("issue_counter") {
  sources = [
    "IssueCounter.ts",
    "IssueLinkIcon.ts",
  ]

  deps = [
    "../../../core/common:bundle",
    "../../../core/i18n:bundle",
    "../../../models/issues_manager:bundle",
