  deps = [
    ":css_files",
    ":node_text",
  ]

  visibility = default_components_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [ "NodeText.test.ts" ]

  deps = [
    ":bundle",
    "../../../testing",
  ]
}
