  visibility = default_components_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [
    "FeedbackButton.test.ts",
    "PanelFeedback.test.ts",
    "PreviewToggle.test.ts",
  ]

  deps = [
    ":bundle",
    "../../../testing",
    "../render_coordinator:bundle",
  ]
