  visibility = default_components_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [ "TwoStatesCounter.test.ts" ]

  deps = [
    ":bundle",
    "../../../core/common:bundle",
    "../../../testing",
  ]
}
