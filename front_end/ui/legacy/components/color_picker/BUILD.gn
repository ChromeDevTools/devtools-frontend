import("../../../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../../../scripts/build/ninja/devtools_module.gni")
import("../../../../../scripts/build/ninja/generate_css.gni")
import("../../../../../third_party/typescript/typescript.gni")
import("../../visibility.gni")

generate_css("css_files") {
  sources = [ "spectrum.css" ]
}

devtools_module("color_picker") {
  sources = [
    "ColorFormatSpec.ts",
    "ContrastDetails.ts",
    "ContrastInfo.ts",
    "ContrastOverlay.ts",
    "FormatPickerContextMenu.ts",
    "Spectrum.ts",
  ]

  deps = [
    "../../../../core/common:bundle",
    "../../../../core/host:bundle",
    "../../../../core/i18n:bundle",
    "../../../../core/platform:bundle",
    "../../../../core/sdk:bundle",
    "../../../../ui/components/icon_button:bundle",
    "../../../../ui/components/srgb_overlay:bundle",
    "../../../../ui/legacy:bundle",
    "../../../../ui/visual_logging:bundle",
  ]
}

devtools_entrypoint("bundle") {
  entrypoint = "color_picker.ts"

  deps = [
    ":color_picker",
    ":css_files",
  ]

  visibility = [
    ":*",
    "../../../../panels/css_overview/*",
    "../../../../panels/elements/*",
    "../../../../panels/sources/*",
    "../../../components/text_editor/*",
  ]

  visibility += devtools_ui_legacy_visibility
}

ts_library("unittests") {
  testonly = true

  sources = [
    "ColorFormatSpec.test.ts",
    "Spectrum.test.ts",
  ]

  deps = [
    ":bundle",
    "../../../../testing",
    "../../../legacy:bundle",
  ]
}
