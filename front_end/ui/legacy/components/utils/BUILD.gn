ts_library("unittests") {
  testonly = true

  sources = [
    "JSPresentationUtils.test.ts",
    "Linkifier.test.ts",
  ]

  deps = [
    ":bundle",
    "../../../../core/sdk:bundle",
    "../../../../models/bindings:bundle",
    "../../../../models/workspace:bundle",
    "../../../../testing",
  ]
}
