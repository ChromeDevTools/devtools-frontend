  entrypoint = "utils.ts"

  deps = [
    ":css_files",
    ":utils",
  ]

  visibility = [
    ":*",
    "../../../../entrypoints/*",
    "../../../../models/extensions/*",
    "../../../../models/persistence/*",
    "../../../../panels/*",
    "../../../../panels/search/*",
    "../../../components/linear_memory_inspector/*",
    "../inline_editor/*",
    "../object_ui/*",
